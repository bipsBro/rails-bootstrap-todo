<%= bootstrap_form_for(@todo, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.text_field :title, id: :todo_title %>
  <%= f.text_field :notes, id: :todo_notes %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Task Name</th>
        <th>Completed</th>
      </tr>
    </thead>
    <tbody class='fields'>
      <%= f.fields_for :tasks do |builder| %>
        <%= render 'task', f: builder %>
      <% end %>
    </tbody>
  </table>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success'%>
    <%= link_to_add_row('Add Task', f, :tasks, class: 'btn btn-primary') %>
  </div>
<% end %>