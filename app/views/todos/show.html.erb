<H1><strong>Title : </strong><small><%= @todo.title %></small></H1>
<H1><strong>Note : </strong><small><%= @todo.notes %></small></H1>

<% if @todo.tasks.exists? %>
	<table class="table table-hover">
		<thead>
			<tr>
			  <th>Tasks Name</th>
			  <th>Completed</th>
			</tr>
		</thead>

		<tbody>
		<% @todo.tasks.each do |task| %>
		  <tr>
		    <td><%= task.name %></td>
		    <td><%= task.completed %></td>
		   </tr>
		<% end %>
		</tbody>
	</table>
<% else %>
<p>No Task Assigned</p>
<% end %>

<%= link_to 'Edit', edit_todo_path(@todo), class: 'btn btn-success' %> |
<%= link_to 'Back', todos_path, class: 'btn btn-info'  %>
